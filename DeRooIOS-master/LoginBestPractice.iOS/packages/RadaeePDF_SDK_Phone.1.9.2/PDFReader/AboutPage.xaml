<Page
    x:Class="PDFReader.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PDFReader"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="0,100,0,0" Grid.Column="0" Grid.Row="0" Text="Radaee PDF Reader" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="28" TextWrapping="Wrap"/>
        <TextBlock Margin="20,160,0,0" Grid.Column="0" Grid.Row="0" Text="Email:" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="28" TextWrapping="Wrap"/>
        <HyperlinkButton Margin="80,190,0,0" Grid.Column="0" Grid.Row="0" Content="radaeepdf@gmail.com" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="28" NavigateUri="mailto:radaeepdf@gmail.com"/>
        <TextBlock Margin="20,250,0,0" Grid.Column="0" Grid.Row="0" Text="PDFViewer SDK:" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="28" TextWrapping="Wrap"/>
        <HyperlinkButton Margin="80,280,0,0" Grid.Column="0" Grid.Row="0" Content="http://www.androidpdf.mobi" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="28" NavigateUri="http://www.androidpdf.mobi"/>
        <TextBlock Margin="20,340,0,0" Grid.Column="0" Grid.Row="0" Text="Web site: " VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="28" TextWrapping="Wrap"/>
        <HyperlinkButton Margin="80,370,0,0" Grid.Column="0" Grid.Row="0" Content="http://www.radaee.com/en" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="28" NavigateUri="http://www.radaee.com/en"/>
        <TextBlock Margin="20,420,0,0" Grid.Column="0" Grid.Row="0" Text="Developed by: Radaee Studio." VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="28" TextWrapping="Wrap"/>
        <TextBlock Margin="20,450,0,0" Grid.Column="0" Grid.Row="0" Text="All rights reserved." VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="28" TextWrapping="Wrap"/>
    </Grid>
</Page>